{
	"root": true,
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parserOptions": {
		"sourceType": "script",
    "ecmaFeatures": {
        "jsx": true
    }
	},
	// "globals": {},
  "plugins": [
    "react"
  ],
	"rules": {
		"linebreak-style": "off",
		"no-undef": "off",
		"no-unused-vars": "off",
		"no-console": "off",
		"eqeqeq": "error",
		"semi": "error",
		"eol-last": "error",
		"indent": [ "error", "tab"],
		"quotes": ["error", "single"]
	}
}